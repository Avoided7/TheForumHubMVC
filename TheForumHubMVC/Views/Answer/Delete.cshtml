@using TheForumHubMVC.Data.ViewModels.Question;
@model AnswerVM
@{
    ViewData["Title"] = "Delete answer";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post">
            <div class="card text-white bg-dark">
                <div class="card-header">
                    <h3><b>Confirm delete answer?</b></h3>
                </div>
                <div class="card-body">
                    <input asp-for="UserId" hidden />
                    <input asp-for="QuestionId" hidden />
                    <div class="card-text">
                        <label class="form-label" asp-for="@Model.Content"></label>
                        <textarea disabled class="form-control" asp-for="@Model.Content"></textarea>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-danger" type="submit">Confirm</button>
                </div>
            </div>
        </form>
    </div>
</div>