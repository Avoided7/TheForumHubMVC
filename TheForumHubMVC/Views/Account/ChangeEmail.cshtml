@using TheForumHubMVC.Data.ViewModels.Account;
@model ChangeEmailVM
@{
    ViewData["Title"] = "Change email";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h3><b>Change email</b></h3>
                </div>
                <div class="card-body">
                    <div class="card-text">
                        <label class="form-label" asp-for="NewEmail"></label>
                        <input class="form-control" asp-for="NewEmail" />
                        <span class="text-danger" asp-validation-for="NewEmail"></span>
                    </div>
                    <div class="card-text">
                        <label class="form-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Change</button>
                </div>
            </div>
        </form>
    </div>
</div>