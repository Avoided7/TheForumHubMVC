@using TheForumHubMVC.Data.ViewModels.Account;
@model EditVM
@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" enctype="multipart/form-data">
            <div class="card text-white">
                <div class="card-header">
                    <h3><b>Edit Username/Logotype</b></h3>
                </div>
                <div class="card-body">
                    <div class="card-text mb-3">
                        <label class="form-label" asp-for="Username"></label>
                        <input class="form-control" asp-for="Username" />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="card-text mb-3">
                        <label class="form-label" asp-for="NewLogoImg"></label>
                        <input class="form-control" asp-for="NewLogoImg" type="file" accept="image/*" />
                        <span class="text-danger" asp-validation-for="NewLogoImg"></span>
                    </div>
                    <div class="card-text mb-3">
                        <input class="form-check-input" asp-for="Notifications" />
                        <label class="form-check-label" asp-for="Notifications"></label>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Edit</button>
                </div>
            </div>
        </form>
    </div>
</div>