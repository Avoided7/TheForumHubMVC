@using TheForumHubMVC.Data.ViewModels.Question;
@model QuestionVM

@{
    ViewData["Title"] = "Ask question";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post">
            <div class="card text-white bg-dark mb-3">
                <div class="card-header">
                    <h3><b>Ask question</b></h3>
                </div>
                <div class="card-body">
                    <div class="card-text mb-3">
                        <label class="form-label" asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                    <div class="card-text mb-3">
                        <label class="form-label" asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="card-text mb-3">
                        <label class="form-label" asp-for="TagsId"></label>
                        <select class="form-control" asp-for="TagsId" asp-items="@(ViewData["Tags"] as SelectList)"></select>
                        <span class="text-danger" asp-validation-for="TagsId"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success">Create</button>
                </div>
                <div asp-validation-summary="ModelOnly"></div>
            </div>
        </form>
    </div>
</div>